{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://spainion.github.io/bastards-blood/schemas/character.schema.json",
  "type": "object",
  "required": [
    "id",
    "name",
    "stats",
    "hp"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "name": {
      "type": "string"
    },
    "class": {
      "type": "string"
    },
    "lvl": {
      "type": "integer",
      "minimum": 0
    },
    "stats": {
      "type": "object",
      "additionalProperties": {
        "type": "integer"
      },
      "properties": {
        "STR": {
          "type": "integer"
        },
        "DEX": {
          "type": "integer"
        },
        "CON": {
          "type": "integer"
        },
        "INT": {
          "type": "integer"
        },
        "WIS": {
          "type": "integer"
        },
        "CHA": {
          "type": "integer"
        }
      }
    },
    "hp": {
      "type": "object",
      "required": [
        "max",
        "current"
      ],
      "properties": {
        "max": {
          "type": "integer"
        },
        "current": {
          "type": "integer"
        }
      }
    },
    "inventory": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "notes": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
